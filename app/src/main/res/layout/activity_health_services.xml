<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".health_services">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <EditText
        android:id="@+id/taso"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="hostels_of_taso"
        android:hint="more"

        android:layout_height="45dp"/>
    <Button
        android:id="@+id/select1"
        android:layout_below="@id/taso"

        android:layout_marginBottom="40dp"

        android:layout_width="wrap_content"

        android:text="select"

        android:layout_height="50dp"/>
    <EditText

        android:id="@+id/kash"
        android:layout_below="@id/select1"

        android:layout_marginBottom="20dp"

        android:layout_width="wrap_content"
        android:text="kash"

        android:hint="kash"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/select2"
        android:layout_below="@id/kash"

        android:layout_marginBottom="40dp"

        android:layout_width="wrap_content"

        android:text="Select"

        android:layout_height="50dp"/>
    <EditText

        android:id="@+id/campushall"
        android:layout_below="@id/select2"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:text="campushall"
        android:hint="campushall"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/select5"
        android:layout_below="@id/campushall"
        android:layout_marginBottom="40dp"

        android:layout_width="wrap_content"

        android:text="Select"

        android:layout_height="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRESS BACK TO LAUNCH MAPS TO SEE HOSTELS AROUND YOU">

    </TextView>

</RelativeLayout>
